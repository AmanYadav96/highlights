        <script>
$(document).ready(function() {  
  $('#alertContainer').empty();
  $("#btnUpdate").click(function(){
    var id = $("#id").val();
    var userId = $("#userId").val();
    var message = $("#message").val();
    var status = $("#statuss").val();
    console.log(status);
    updateData(id, message, status, userId);
  });
});

async function updateData(id, message, status, userId) {

  $('#alertContainer').empty();

  $('#btnUpdate').addClass("disabled");
  $('#btnUpdate').html('Saving..');

  $.ajax({
    type: "POST",
    url: "updateRequest",
    data:  {
      id: id,
      userId: userId,
      message: message,
      status: status
    },
    success: function (res) {
      if (res.status === 'success') {
        $('#btnUpdate').removeClass("disabled")
        $('#btnUpdate').html('Update');
        $('#alertContainer').html(`
          <div class="alert alert-success" role="alert">
            ${res.message}
          </div>
        `);
        setTimeout(function () {
          $('#alertContainer .alert').hide();
        }, 1000); 
      } else {
        $('#alertContainer').html(`
          <div class="alert alert-danger" role="alert">
            ${res.message}
          </div>
        `);
      }
    },
    dataType: 'json',
  });
}

function showImageInNewTab() {
  console.log(imageUrl);
    var imageUrl = document.getElementById('document').value;
    window.open(imageUrl);
}

        </script>
